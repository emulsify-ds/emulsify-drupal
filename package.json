{
  "name": "emulsify-drupal",
  "version": "1.0.0",
  "description": "Storybook development + Webpack Build + Drupal 8 theme",
  "keywords": [
    "component library",
    "design system",
    "drupal",
    "pattern library",
    "storybook",
    "styleguide"
  ],
  "author": "Four Kitchens <shout@fourkitchens.com>",
  "license": "ISC",
  "scripts": {
    "a11y": "npm run storybook-build && ./scripts/a11y.js -r",
    "build": "webpack --config ./webpack/webpack.prod.js",
    "commit": "git-cz",
    "coverage": "npm run test && open-cli .coverage/lcov-report/index.html",
    "develop": "concurrently --raw \"npm run webpack\" \"npm run storybook\"",
    "format": "npm run lint-fix; npm run prettier-fix",
    "lint": "npm run lint-js; npm run lint-styles",
    "lint-fix": "npm run lint-js -- --fix; npm run lint-styles -- --fix",
    "lint-js": "eslint --no-error-on-unmatched-pattern ./components",
    "lint-staged": "lint-staged",
    "lint-styles": "stylelint './components/**/*.scss'",
    "postinstall": "npx patch-package",
    "prepare": "[ -d '.git' ] && (husky install) || true",
    "prettier": "prettier --ignore-unknown \"./components/**/*.{js,yml,scss,md}\"",
    "prettier-fix": "prettier --write --ignore-unknown \"./components**/*.{js,yml,scss,md}\"",
    "storybook": "start-storybook --ci -s ./dist,./images -p 6006",
    "storybook-build": "npm run build && build-storybook -s ./dist,./images -o .out",
    "storybook-deploy": "storybook-to-ghpages -o .out",
    "test": "jest --coverage",
    "twatch": "jest --no-coverage --watch --verbose",
    "webpack": "webpack --watch --config ./webpack/webpack.dev.js"
  },
  "dependencies": {
    "add-attributes-twig-extension": "^0.1.0",
    "bem-twig-extension": "^0.1.1",
    "graceful-fs": "^4.2.10",
    "normalize.css": "^8.0.1",
    "postcss-scss": "^4.0.6",
    "regenerator-runtime": "^0.13.11",
    "stylelint-selector-bem-pattern": "^2.1.1",
    "twig-drupal-filters": "^3.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/eslint-parser": "^7.19.1",
    "@storybook/addon-a11y": "^6.5.15",
    "@storybook/addon-actions": "^6.5.15",
    "@storybook/addon-essentials": "^6.5.15",
    "@storybook/addon-links": "^6.5.15",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-webpack5": "^6.5.15",
    "@storybook/html": "^6.5.15",
    "@storybook/manager-webpack5": "^6.5.15",
    "@storybook/storybook-deployer": "^2.8.16",
    "autoprefixer": "^10.4.13",
    "babel-loader": "^9.1.2",
    "babel-preset-minify": "^0.5.2",
    "breakpoint-sass": "^3.0.0",
    "chalk": "^5.2.0",
    "clean-webpack-plugin": "^4.0.0",
    "commitizen": "^4.2.6",
    "concurrently": "^7.6.0",
    "css-loader": "^5.2.7",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.31.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.2.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-security": "^1.5.0",
    "eslint-plugin-storybook": "^0.6.8",
    "eslint-webpack-plugin": "^3.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.3",
    "imagemin-webpack-plugin": "^2.4.2",
    "js-yaml-loader": "^1.2.2",
    "lint-staged": "^13.1.0",
    "mini-css-extract-plugin": "^2.7.2",
    "node-sass-glob-importer": "^5.3.2",
    "open-cli": "^7.1.0",
    "pa11y": "^6.2.3",
    "postcss": "^8.4.20",
    "postcss-loader": "^7.0.2",
    "ramda": "^0.28.0",
    "sass": "^1.57.1",
    "sass-loader": "^10.1.1",
    "style-dictionary": "^3.7.2",
    "style-loader": "^2.0.0",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier-scss": "^0.0.1",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-prettier": "^2.0.0",
    "stylelint-webpack-plugin": "^3.3.0",
    "svg-sprite-loader": "^6.0.11",
    "token-transformer": "^0.0.29",
    "twig-loader": "https://github.com/fourkitchens/twig-loader",
    "twig-testing-library": "^1.2.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-merge": "^5.8.0",
    "yaml": "^2.2.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
